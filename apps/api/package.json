{
  "name": "@bizing/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:all": "pnpm typecheck && pnpm test && pnpm test:e2e",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "drizzle-kit push:pg"
  },
  "dependencies": {
    "@bizing/db": "workspace:*",
    "@hono/node-server": "^1.0.0",
    "@hono/zod-openapi": "^0.1.0",
    "@scalar/hono-api-reference": "^0.9.40",
    "bcryptjs": "^2.4.0",
    "better-auth": "^1.0.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.30.0",
    "drizzle-zod": "^0.2.0",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.0.0",
    "pino": "^9.0.0",
    "socket.io": "^4.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.0.0",
    "@types/uuid": "^9.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
