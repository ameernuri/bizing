{
  "name": "bizing",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel --if-present dev",
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r --if-present lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:seed": "bun run --cwd packages/db db:seed",
    "db:guard": "bun run --cwd packages/db db:guard",
    "agent:fitness": "bash mind/workspace/run-agent-fitness-loop.sh",
    "agent:code-mode:mcp": "bash scripts/run-code-mode-mcp.sh"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "ulid": "^3.0.2"
  }
}
